class Suma:
    def __init__(self, a, b):
        self.a = a
        self.b = b

    def calcular(self):
        return self.a + self.b

try:
    x = float(input("Ingrese el primer número: "))
    y = float(input("Ingrese el segundo número: "))
    obj = Suma(x, y)
    resultado = obj.calcular()
    print("La suma es:", resultado)
except Exception as e:
    print("Error:", e)
